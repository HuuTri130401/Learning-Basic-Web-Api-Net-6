@model IEnumerable<TranHuuTri.Assignment02.eBookStoreWebAPI.ViewModels.Author.AuthorVM>
@{
    ViewData["Title"] = "Author Page";
}

<h3>eBookStore/ Authors</h3>
<hr />

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
    <div class="form-actions no-color">
        <p>
            <form asp-action="Index" method="post">
                Find by Author Email: <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Search" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-primary">Back to Full List</a>
            </form>
        </p>
    </div>
    @ViewBag.StringJson
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Zip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
                    </td>
                    <td>
                        @if (item.State == 0)
                        {
                            <span class="text-danger">InActive</span>
                        }
                        else if (item.State == 1)
                        {
                            <span class="text-success">Active</span>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id=item.Id}, new { @class = "btn btn-primary" }) |
                        @Html.ActionLink("InActive", "DeleteConfirmed", new {id=item.Id}, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
